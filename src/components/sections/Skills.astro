---
import Section from "src/components/shared/Section.astro";
import Icon from "src/components/shared/Icon.astro";
import SoftSkillsBox from "src/components/shared/SoftSkillsBox.astro";
import { HARD_SKILLS } from "src/assets/maps/skillsList.json";
import type { IconName } from "src/types";
---

<Section id="skills" title="My Skills">
  <div class="skillsContainer">
    <h4>Tech stack</h4>
    <ul class="skillsList">
      {
        HARD_SKILLS.map(({ name, color }) => (
          <li style={`--tech-color: ${color}`} class="skillsList__item">
            <Icon effect={"opaque"} size={"small"} name={name as IconName} />
            {name}
          </li>
        ))
      }
    </ul>
  </div>
  <SoftSkillsBox />
</Section>

<style>
  .skillsContainer {
    width: 100%;
    margin: 0 auto;
  }

  .skillsList {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .skillsList__item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background-color: var(--tech-color, #f5f5f5);
    color: #333;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    font-weight: 600;
  }
</style>
