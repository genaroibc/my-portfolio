---
import navBarLinks from "src/assets/maps/navbarLinks.json";
---

<header id="page-header">
  <a class="brand" href="#top"><span>GB</span></a>
  <nav id="navbar">
    {
      navBarLinks.map(({ href, title }) => (
        <a class="navbar-link" href={href}>
          {title}
        </a>
      ))
    }
  </nav>

  <button aria-label="open menu button" id="navbar-btn">
    <span class="hamburger-stick"></span>
    <span class="hamburger-stick"></span>
    <span class="hamburger-stick"></span>
  </button>
</header>

<script>
  const $pageHeader = document.getElementById("page-header");
  let lastScrollY = window.scrollY;

  function toggleHeaderOnScroll() {
    const currentScrollY = window.scrollY;
    const isScrollDown = lastScrollY < currentScrollY;

    $pageHeader?.classList.toggle("page-header-hidden", isScrollDown);
    lastScrollY = currentScrollY;
  }

  function toggleHamburgerMenu() {
    document.getElementById("navbar")?.classList.toggle("menu-visible");
  }

  document.addEventListener("click", e => {
    const target = e.target as HTMLElement;

    if (
      target &&
      (target.matches("#navbar a") ||
        target.matches("#navbar-btn") ||
        target.matches("#navbar-btn *"))
    ) {
      toggleHamburgerMenu();
    }
  });

  window.addEventListener("scroll", () => {
    toggleHeaderOnScroll();
  });
</script>

<style>
  a {
    font-size: 1.2rem;
  }

  .brand {
    font-weight: bolder;
    font-size: 2rem;
    color: #fff;
  }

  .brand::first-letter {
    color: var(--terciary-color);
  }

  .navbar-link.navlink-active {
    text-shadow: 1px 1px 5px var(--terciary-color);
    color: #fff;
  }

  /* *** HEADER *** */
  #page-header {
    position: fixed;
    z-index: 800;
    top: 0;
    left: 0;
    right: 0;

    max-width: 1400px;
    margin: auto;

    display: flex;
    justify-content: space-between;
    align-items: center;

    padding: 0.5rem 1rem;

    backdrop-filter: blur(3px);
    box-shadow: 0px 5px 10px 5px #0006;
    transition: top 0.3s ease-in;
  }

  #page-header.page-header-hidden {
    top: -150px;
  }

  /* *** NAVBAR *** */
  #navbar {
    position: absolute;
    left: 0;
    top: -15vh;
    z-index: 900;

    width: 100vw;
    height: 100vh;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;

    clip-path: circle(0 at 50% 0);
    transition: clip-path 0.7s ease, top 0.7s ease;
  }

  .navbar-link {
    padding: 0.8rem;
    text-decoration: none;
    color: #ccc;

    transition: color 0.2s ease;
  }

  .navbar-link:hover {
    color: #fff;
    text-decoration: underline;
  }

  #navbar.menu-visible {
    clip-path: circle(100% at 50% 50%);
    top: 0;
  }

  #navbar-btn {
    position: absolute;
    right: 30px;
    top: 84vh;
    z-index: 1000;

    width: 4rem;
    height: 4rem;
    padding: 0.8rem;
    border-radius: 5px;
    border: 0;

    display: flex;
    flex-direction: column;
    justify-content: space-around;

    outline: 0;
    background-color: var(--terciary-color);
  }

  #navbar-btn .hamburger-stick {
    width: 100%;
    height: 3.2px;
    border-radius: 5px;

    transition: transform 0.5s, opacity 0.5s;

    transform-origin: left;

    background-color: #fff;
  }

  #navbar.menu-visible ~ #navbar-btn .hamburger-stick:first-child {
    transform: rotate(34.5deg) scaleX(1.2);
  }

  #navbar.menu-visible ~ #navbar-btn .hamburger-stick:nth-child(2) {
    opacity: 0;
  }

  #navbar.menu-visible ~ #navbar-btn .hamburger-stick:nth-child(3) {
    transform: rotate(-34.5deg) scaleX(1.2);
  }

  @media screen and (min-width: 768px) {
    #page-header {
      padding: 1.8rem;
    }

    #page-header #navbar.menu-visible {
      top: unset;
    }

    .navbar-link {
      padding: 0;
    }

    #page-header #navbar-btn {
      display: none;
    }

    #navbar {
      position: unset;
      z-index: unset;
      width: auto;
      height: auto;

      flex-direction: row;
      justify-content: center;

      font-size: 1.3rem;

      clip-path: unset;
    }
  }
</style>
