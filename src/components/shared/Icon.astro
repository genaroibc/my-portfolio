---
import type { IconName, IconSize } from "src/types";

export type TIcon = {
  name: IconName;
  size: IconSize;
};

export interface Props extends TIcon {
  effect?: "opaque" | "colorized" | "animated";
}

const { size, name, effect = "animated" } = Astro.props;
---

<img
  src={`/svg/techs/${name}.svg`}
  class={`icon-${size} ${effect}`}
  alt={`${name} icon`}
/>

<style>
  img.animated,
  img.opaque {
    filter: brightness(0);
    transition: filter 0.15s ease-out;
  }

  img.animated:hover {
    filter: brightness(1);
  }

  .icon-tiny {
    width: 1rem;
    height: 1rem;
  }

  .icon-small {
    width: 1.5rem;
    height: 1.5rem;
  }

  .icon-medium {
    width: 2rem;
    height: 2rem;
  }

  .icon-large {
    width: 2.5rem;
    height: 2.5rem;
  }

  .icon-huge {
    width: 3rem;
    height: 3rem;
  }
</style>
