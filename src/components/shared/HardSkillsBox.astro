---
import Icon from "src/components/shared/Icon.astro";
import { HARD_SKILLS } from "src/assets/maps/skillsList.json";
import type { IconName } from "src/types";
---

<h4>Hard Skills</h4>
<div class="hardSkillsCont">
  <nav class="navbar">
    {
      HARD_SKILLS.SECTIONS.map(({ title, sectionId }) => (
        <label tabindex="0" class="navbar__option" for={sectionId}>
          {title}
        </label>
      ))
    }
  </nav>

  <div class="skills">
    {
      HARD_SKILLS.ITEMS.map(({ items, sectionId }, index) => (
        <div class="skillsBox">
          <input
            checked={index === 0}
            type="radio"
            name="skills"
            id={sectionId}
          />
          {(items as IconName[]).map(tech => (
            <div title={tech}>
              <Icon name={tech} size={"medium"} />
            </div>
          ))}
        </div>
      ))
    }
  </div>
</div>

<style>
  input[type="radio"] {
    display: none;
  }

  .skillsBox {
    position: absolute;

    opacity: 0;
    transform: translateX(-100%) scale(0.6);
    transition: transform 0.5s ease-in-out, opacity 0.5s ease-in-out;

    justify-content: center;
    align-items: center;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;

    padding: 1rem;

    background-color: #777;

    overflow: auto;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
  }

  .skillsBox:has(input:checked) {
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;

    display: flex;
    opacity: 1;

    transform: translateX(0);
  }

  .hardSkillsCont {
    display: flex;
    border-radius: 5px;

    background-color: #999;
    padding: 0.3rem;

    margin-bottom: 4rem;
  }

  .skills {
    position: relative;

    width: 100%;

    overflow: hidden;

    border-radius: 0 5px 5px 0;
  }

  .navbar {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;

    width: 40%;
    padding: 1rem;

    border-right: 3px solid #999;
    border-radius: 5px 0 0 5px;
    background-color: #777;
  }

  .navbar__option {
    width: 100%;
    color: #000;

    padding: 1rem;
    background-color: #999;

    transition: box-shadow 0.2s ease-out;
    border-radius: 5px;
    cursor: pointer;
  }
  .navbar__option:is(:hover, :active) {
    box-shadow: 0px 6px 12px #0004;
  }
</style>
