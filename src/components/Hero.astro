---
import GitHubLogo from "./animated-icons/GitHubLogo.astro";
import LinkedinLogo from "./animated-icons/LinkedinLogo.astro";
import OvalShadow from "./shared/OvalShadow.astro";
---

<section>
  <span class="intro">hi ðŸ‘‹, I am</span>
  <h1 class="title">Genaro Bonavita</h1>
  <h2 class="subtitle">Frontend Developer</h2>

  <div class="ovalShadowContainerOne">
    <OvalShadow />
  </div>
  <div class="ovalShadowContainerTwo">
    <OvalShadow />
  </div>

  <p class="paragraph">
    I create solutions and solve problems through clean and maintainable code.
  </p>

  <nav class="contactNavbar">
    <a download class="downloadCvBtn" href="/Genaro-Bonavita-CV.pdf">
      Download CV
    </a>

    <a class="contactNavbar__contactItem" href="https://github.com/GenaroIBC">
      <GitHubLogo />
    </a>
    <a
      class="contactNavbar__contactItem"
      href="https://linkedin.com/in/genaro-bonavita"
    >
      <LinkedinLogo />
    </a>
  </nav>
</section>

<style>
  .ovalShadowContainerOne,
  .ovalShadowContainerTwo {
    position: absolute;
    z-index: -100;

    animation: 15s ease-in-out infinite both;
  }

  .ovalShadowContainerOne {
    top: 40%;
    left: -20%;

    rotate: 180deg;
    animation-direction: alternate;
    animation-name: ovalShadowFloatingOne;
  }

  .ovalShadowContainerTwo {
    right: 0;
    top: 10%;

    animation-direction: alternate-reverse;
    animation-name: ovalShadowFloatingTwo;
  }

  .downloadCvBtn {
    padding: 0.6rem 1.5rem;
    border-radius: 2rem;

    font-weight: 600;
    background-color: transparent;
    text-decoration: none;

    transition: 0.2s ease-out;
    transition-property: box-shadow, transform;
    border: 3px solid var(--complement-color);
    color: #fff;
  }

  .downloadCvBtn:is(:hover, :focus) {
    transform: translateY(-0.3rem);
    box-shadow: 0 0.3rem var(--complement-color);
    text-decoration: none;
  }

  .contactNavbar {
    display: flex;
    align-items: center;
    gap: 1rem;

    margin: 3rem 0;
  }

  .contactNavbar__contactItem {
    width: 2rem;
    width: 2rem;

    aspect-ratio: 1/1;
    line-height: 1;

    transition: filter 0.15s ease;
    filter: brightness(0.8);
  }

  .contactNavbar__contactItem:hover {
    filter: brightness(100%);
  }

  section {
    margin: 0 auto !important;
    padding: 10rem 0 !important;
    position: relative;
    z-index: 100;
  }

  .paragraph {
    max-width: 40ch;

    font-size: 1.3rem;
  }

  .title {
    line-height: 1.3;
    color: var(--terciary-color);

    font-size: 5rem;
    margin: 0 0 1rem;
  }

  .subtitle {
    margin: 0 auto 3rem;
    font-size: 1.8rem;
  }

  .intro {
    display: block;

    opacity: 0.8;
  }

  @media screen and (max-width: 768px) {
    h1 {
      font-size: 4rem;
    }
  }

  @keyframes ovalShadowFloatingOne {
    from {
      transform: translateY(200px);
    }
    to {
      transform: translateY(-100px);
    }
  }

  @keyframes ovalShadowFloatingTwo {
    from {
      transform: translateY(-100px);
    }
    to {
      transform: translateY(200px);
    }
  }
</style>
