---
import GitHubLogo from "./animated-icons/GitHubLogo.astro";
import LinkedinLogo from "./animated-icons/LinkedinLogo.astro";
---

<section>
  <h1 class="title">Genaro Bonavita</h1>
  <h2 class="subtitle">Frontend Developer</h2>

  <div class="info">
    <p class="paragraph">
      I create solutions and solve problems through clean and maintainable code.
    </p>

    <nav class="contactNavbar">
      <a download class="downloadCvBtn" href="/Genaro-Bonavita-CV.pdf">
        Download CV
      </a>

      <a class="contactNavbar__contactItem" href="https://github.com/GenaroIBC">
        <GitHubLogo />
      </a>
      <a
        class="contactNavbar__contactItem"
        href="https://linkedin.com/in/genaro-bonavita"
      >
        <LinkedinLogo />
      </a>
    </nav>
  </div>
</section>

<style>
  .downloadCvBtn {
    padding: 1rem 2rem;
    border-radius: 2rem;

    font-weight: 600;
    background-color: var(--complement-color);
    text-decoration: none;

    transition: filter 0.2s ease-out;
    border: none;
    color: #fff;
  }

  .downloadCvBtn:is(:hover, :focus) {
    text-decoration: none;

    filter: brightness(1.2);
  }

  .contactNavbar {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;

    margin: 3rem 0;
  }

  .contactNavbar__contactItem {
    width: 2rem;
    width: 2rem;

    aspect-ratio: 1/1;
    line-height: 1;

    transition: filter 0.15s ease;
    filter: brightness(0.8);
  }

  .contactNavbar__contactItem:hover {
    filter: brightness(100%);
  }

  section {
    margin: 5vh auto !important;
    padding: 10rem 0 !important;
    position: relative;
    z-index: 100;
  }

  .paragraph {
    max-width: 40ch;

    font-size: 1.5rem;
  }

  .info {
    animation: enterInViewFromLeft 0.5s 0.7s ease-out both;
  }

  .title {
    line-height: 1.3;
    color: var(--terciary-color);

    font-size: 6rem;
    margin: 0 0 1rem;

    animation: enterInView 0.5s ease-out both;
  }

  .subtitle {
    margin: 0 auto 3rem;
    font-size: 2.5rem;

    color: #cdb4ff;
    animation: enterInView 0.5s 0.2s ease-out both;
  }

  @media screen and (max-width: 768px) {
    section {
      text-align: center;
    }

    .contactNavbar {
      width: fit-content;
      margin: 2rem auto;
    }

    .paragraph {
      margin: 0 auto;
    }
    .title {
      font-size: 4rem;
    }
  }

  /* create and animation to fade in the title and subtitle */
  @keyframes enterInView {
    from {
      opacity: 0;
      transform: translateY(3rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes enterInViewFromLeft {
    from {
      opacity: 0;
      transform: translateX(-3rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
